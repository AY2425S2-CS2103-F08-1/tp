<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.chart.PieChart?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.Scene?>

<fx:root resizable="false" title="ReserveMate Statistics" type="javafx.stage.Stage" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1">
    <scene>
        <Scene>
            <VBox fx:id="messageContainer"
                  alignment="CENTER"
                  spacing="10"
                  style="-fx-padding: 20;">
                <children>
                <Label fx:id="statisticsMessage"
                       text="Reservation Statistics"
                       style="-fx-font-size: 18px; -fx-font-weight: bold;"
                />
                <PieChart fx:id="pieChart"
                          prefWidth="400"
                          prefHeight="300"
                />
                </children>
            </VBox>
        </Scene>
    </scene>
</fx:root>
